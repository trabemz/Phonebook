<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Phonebook</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script> *@

    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <script src="~/js/vendor.js" asp-append-version="true"></script>
    @RenderSection("Styles", required: false)
</head>

<body style="padding-top: 5rem;" class="dx-viewport">

    <nav class="navbar navbar--custom navbar-expand-md fixed-top dx-theme-background-color dx-theme-accent-as-text-color">
        <div class="container">
            <a class="navbar-brand" href="/">Phonebook</a>

            <button type="button" class="navbar-toggler dx-theme-accent-as-border-color" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item" id="IndexNavItem"><a asp-page="Index" class="nav-link">Главная</a></li>
                    <li class="nav-item" id="LocationsNavItem"><a asp-page="Locations" class="nav-link">Административные округа и районы (справочник)</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>

</html>